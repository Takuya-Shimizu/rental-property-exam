<%= form_with(model: @property, local: true, url: choose_new_or_edit) do |form| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= @property.errors.count %> 件のエラーがあります。</h2>

      <ul>
        <% @property.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :property_name %>
    <%= form.text_field :property_name %>
  </div>

  <div class="field">
    <%= form.label :rent %>
    <%= form.text_field :rent %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :the_age_of_the_building %>
    <%= form.text_field :the_age_of_the_building %>
  </div>

  <div class="field">
    <%= form.label :remarks %>
    <%= form.text_area :remarks %>
  </div>

  <hr>
  <% number = 0 %>
  <%= form.fields_for :nearest_stations do |g| %>
  <h2>最寄り駅<%= number += 1 %></h2>
    <%= g.label :line %>
    <%= g.text_field :line %>
    <%= g.label :station %>
    <%= g.text_field :station %>
    <%= g.label :on_foot %>
    <%= g.text_field :on_foot %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
